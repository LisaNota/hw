int firstUniqChar(char * s){
    int ans;
    bool flag = false;
    int alph[26] = {0};

    for (int i = 0; i < strlen(s); i++)
        alph[s[i]-'a']++;

    for (int i = 0; i < strlen(s); i++){
        if (alph[s[i]-'a'] == 1) {  
            ans = i;
            flag = true;
            break;}}

    if (!flag) ans=-1;

    return ans;
}
